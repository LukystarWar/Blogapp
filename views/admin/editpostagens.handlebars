{{#each erros}}<div class="alert-danger">{{texto}}</div>{{/each}}
<div>
    <h1>Editar Postagem</h1>
    <form action="/admin/postagem/edit" method="POST" class="form">
        <input type="hidden" value="{{postagem._id}}" name="id">
        <label for="titulo">Título: </label><input type="text" name="titulo" value="{{postagem.titulo}}">
        <label for="slug">Slug: </label><input type="text" name="slug" value="{{postagem.slug}}">
        <label for="descricao">Descrição: </label><input type="text" name="descricao" value="{{postagem.descricao}}">
        <label for="conteudo">Conteúdo:</label><textarea name="conteudo" class="mt"> {{postagem.conteudo}} </textarea>
        <label for="categoria" class="mt">Categoria:</label>
        <select name="categoria" class="select mt">
            {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
        <button type="submit">Editar Postagem</button>
    </form>
</div>