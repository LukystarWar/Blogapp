{{#each erros}}<div class="alert alert-danger">{{texto}}</div>{{/each}}
<div>
    <h1>Nova Postagem</h1>
    <form action="/admin/postagens/nova" method="POST" class="form">
        <label for="titulo">Título: </label><input type="text" name="titulo">
        <label for="slug">Slug: </label><input type="text" name="slug">
        <label for="descricao">Descrição: </label><input type="text" name="descricao">
        <label for="conteudo mt">Conteúdo:</label><textarea name="conteudo"></textarea>
        <label for="categoria mt">Categoria:</label>
        <select name="categoria" class="select">
            {{#each categorias}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
        <button type="submit">Criar Postagem</button>
    </form>
</div>